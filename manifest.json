{
  "name": "Pommy",
  "version": "1.0",
  "manifest_version": 3,
  "description": "Timer plus a task list",
  "author":"Bruno Ribeiro",
  "action": {
    "default_icon": "images/icon.png",
    "default_popup": "index.html"
  },
  "icons": {
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "content_scripts": [
  {
    "js": ["script.js"],
    "matches":["<all_urls>"]
  }
  ],
  "permissions": ["scripting","tabs","storage", "notifications", "activeTab"]
}